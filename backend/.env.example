# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/pashu_db

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# SMS Service Configuration (for OTP)
SMS_API_KEY=your_sms_api_key
SMS_API_URL=https://api.sms-service.com/send

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# AI Service Configuration
AI_MODEL_PATH=./models/breed_recognition_model.tflite
AI_CONFIDENCE_THRESHOLD=0.75

# Government API Integration
AADHAAR_API_URL=https://api.uidai.gov.in
AADHAAR_API_KEY=your_aadhaar_api_key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Monitoring
SENTRY_DSN=your_sentry_dsn_here